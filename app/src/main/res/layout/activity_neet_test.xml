<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".NeetTest">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TableRow
        android:weightSum="2">

        <ImageView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bluebutton"
            android:onClick="modaltest1"
            android:layout_weight="1"
            android:src="@drawable/test1"
            />

        <ImageView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bluebutton"
        android:src="@drawable/test2"
            android:layout_weight="1"
        android:onClick="neettest2"/></TableRow>

    <TableRow
        android:weightSum="2">
    <ImageView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bluebutton"
        android:layout_weight="1"
        android:src="@drawable/test3"
        android:onClick="neettest3"/>

    <ImageView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:text="Modal test 4"
        android:background="@drawable/bluebutton"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:gravity="center"
        android:src="@drawable/test4"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:onClick="neettest4"/></TableRow>
    <TableRow
        android:weightSum="2">
    <ImageView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="Modal test 5"
        android:fontFamily="monospace"
        android:layout_weight="1"
        android:textAlignment="center"
        android:gravity="center"
        android:src="@drawable/test5"
        android:textSize="28dp"
        android:background="@drawable/bluebutton"
        android:textColor="@color/black"
        android:onClick="neetttest5"
        />

    <ImageView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:background="@drawable/bluebutton"
        android:layout_height="300dp"
        android:text="Mark history"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/testhistory"
        android:textSize="28dp"
        android:textColor="@color/rose"
        android:onClick="history"/></TableRow>

</TableLayout>
</ScrollView>
</LinearLayout>